{
  "app-id": "org.dtg01100.vacation_calendar_updater",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.7",
  "sdk": "org.kde.Sdk",
  "command": "vacation-calendar-updater",
  "finish-args": [
    "--share=network",
    "--socket=wayland",
    "--socket=x11",
    "--device=dri",
    "--filesystem=home/.credentials:create",
    "--filesystem=home/.vacation_calendar_updater.cfg:create",
    "--persist=.credentials",
    "--persist=.vacation_calendar_updater.cfg"
  ],
  "modules": [
    {
      "name": "vacation-calendar-updater",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install uv",
        "uv venv /app/venv",
        "/app/venv/bin/uv pip install --no-cache-dir -r requirements.txt",
        "install -Dm755 run.sh /app/bin/vacation-calendar-updater",
        "install -Dm644 flatpak/org.dtg01100.vacation_calendar_updater.desktop /app/share/applications/org.dtg01100.vacation_calendar_updater.desktop"
      ],
      "sources": [
        {
          "type": "dir",
          "path": ".."
        },
        {
          "type": "script",
          "dest-filename": "run.sh",
          "commands": [
            "#!/usr/bin/env bash",
            "exec /app/venv/bin/python -m app.main \"$@\""
          ]
        }
      ]
    }
  ]
}
